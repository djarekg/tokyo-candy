{
  "extends": "../../tsconfig.node.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "types": ["bun"],
    "baseUrl": "src",
    "paths": {
      "#app/*": ["./*"],
      "#app/generated/prisma/client": ["./generated/prisma/client.ts"],
      "#prisma/seed/*": ["../prisma/seed/*"],
      "@tc/core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*", "prisma/seed/**/*"],
  "exclude": ["node_modules", "dist"]
}
