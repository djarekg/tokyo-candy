    {
      "name": "Launch Next.js (full stack)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/demo",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/apps/demo"
      },
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "debug app",
      "configurations": ["Launch api", "Launch Next.js (full stack)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    }
  ]
