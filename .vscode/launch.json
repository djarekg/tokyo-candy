{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Next.js (full stack)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}\\apps\\demo",
      "program": "${workspaceFolder}\\apps\\demo\\node_modules\\next\\dist\\bin\\next",
      "runtimeArgs": ["--inspect"],
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}\\apps\\demo"
      }
    }
  ]
}
